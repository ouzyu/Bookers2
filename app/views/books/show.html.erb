<%= render partial: 'books_new', locals: { book: @book_new } %>

<div>
  <p>Title: <%= @book.title %></p>
  <p>Body: <%= @book.body %></p>
  <p>User Image: <%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>User Name: <%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Delete", book_path(@book), method: :delete %>
  <% end %>
</div>
