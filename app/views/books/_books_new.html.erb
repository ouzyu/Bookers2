<h2>User info</h2>
<%= image_tag user_info.get_profile_image(100,100) %>
<h4>name</h4>
<%= user_info.name %>
<h4>introduction</h4>
<%= user_info.introduction %>
<%= link_to "Edit Profile", edit_user_path(user_info.id) %>

<h2>New book</h2>
<%= form_with model: new_book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>