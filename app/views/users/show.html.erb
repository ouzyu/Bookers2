<%= render partial: 'books/books_new', locals: { book: @book_new } %>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @book.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100)%>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>